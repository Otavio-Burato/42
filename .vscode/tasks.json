{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make printf",
            "command": "make",
            "args": [
                "test"
            ],
            "options": {
                "cwd": "${workspaceFolder}/ft_printf"
            },
            "problemMatcher": {
                "owner": "gcc",
                "fileLocation": [ "relative", "${workspaceFolder}/ft_printf"],
                "pattern": {
                  "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$"
                }
            },
            "group": "build"
        },
        {
            "label": "valgrind printf",
            "command": "make",
            "args": [
                "valgrind"
            ],
            "options": {
                "cwd": "${workspaceFolder}/ft_printf"
            },
            "group": "test"
        }
    ]
}
