{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "printf",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/ft_printf/main",
            "args": [
                "test"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/ft_printf",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "make printf",
            "postDebugTask": "valgrind printf",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": false
                }
            ]
        }
    ]
}